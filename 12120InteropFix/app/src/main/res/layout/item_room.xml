<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
        android:id="@+id/room_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="@color/birucard"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/layout_cv1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:id="@+id/txNamaRuang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E6"
                    android:textSize="25sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/putihteks"
                    />
                <TextView
                    android:id="@+id/txNamaDept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dept"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/putihteks"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_cv2"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/txDateAvail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="o"
                    android:textSize="16sp"
                    android:textColor="@color/hitamteks"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:background="@drawable/btn_round"
                    android:backgroundTint="@color/list_abu"
                    />
                <TextView
                    android:id="@+id/txTimeAvail"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:text="p"
                    android:textSize="13sp"
                    android:textColor="@color/hitamteks"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:background="@drawable/btn_round"
                    android:backgroundTint="@color/list_abu"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
